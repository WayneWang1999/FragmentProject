<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".LessonDetails">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvLessonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lesson 3 Variables and Conditions"
            android:textSize="30dp"
            app:layout_constraintBottom_toTopOf="@+id/tvLessonLength"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread" />

        <TextView
            android:id="@+id/tvLessonLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lesson Length:1h20m"
            app:layout_constraintBottom_toTopOf="@+id/tvLessonDetail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLessonName" />

        <TextView
            android:id="@+id/tvLessonDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In this model, you will learn,In this model, you will learn,In this model, you will learn"
            app:layout_constraintBottom_toTopOf="@+id/btnWatchVideo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLessonLength" />

        <Button
            android:id="@+id/btnWatchVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Watch Video"
            app:layout_constraintBottom_toTopOf="@+id/btnComplete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLessonDetail" />

        <Button
            android:id="@+id/btnComplete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnWatchVideo" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>